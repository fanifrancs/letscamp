<%- include ('./partials/header') %> 
    <div class="container mt-4">
      <div class="card">
        <div class="card-body">
          <h4 class="card-title text-center"><%= campground.name %></h4>
          <img 
            src="<%= campground.image %>" 
            class="mx-auto d-block img-fluid"
            alt="campground image"
          >
          <p class="mt-3 text-center"><em>Added by <%= campground.author.username %></em></p>
          <p class="mt-3"><%= campground.desc %></p>
          <a class="btn btn-sm btn-success" href="/campgrounds/<%= campground._id %>/comment/new">
            Add comment
          </a>
          <% if (currentUser && campground.author.id.equals(currentUser._id)) { %>
            <form id="del-c" method="post" action="/campgrounds/<%= campground._id %>?_method=delete">
              <input class="btn btn-sm btn-danger" type="submit" value="delete campground"> 
            </form>
          <% } %>
        </div>
        <div class="container">
          <% campground.comments.forEach((comment) => { %>
            <p><b><%= comment.author.username %></b> - <%= comment.comment %></p>
          <% }) %>
        </div>
      </div>
    </div> 
<%- include ('./partials/footer') %>

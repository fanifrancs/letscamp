<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="A simple node app to create and checkout interesting campgrounds">
    <title>Let's Camp</title>
    <link rel="stylesheet" href="/style.css">
    <link rel="shortcut icon" href="/favicon.png" type="image/x-icon">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/bootstrap-5.1.0-dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/style.css">
  </head>
  <body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
      <div class="container">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a id="logo" class="nav-link active" href="/campgrounds">Let's Camp</a>
          </li>
          <% if (!currentUser) { %>
            <li class="nav-item">
              <a class="nav-link" href="/login">Login</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/register">Register</a>
            </li>
          <% } else { %>
            <li class="nav-item">
              <a class="nav-link active" href="/logout">Logged in as <%= currentUser.username %></a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/logout">Logout</a>
            </li>
          <% } %>
        </ul>
      </div>
    </nav>

    <div class="container mt-4">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title text-center"><%= campground.name %></h4>
                <img 
                    src="<%= campground.image %>" 
                    class="mx-auto d-block img-fluid"
                    alt="campground image"
                >
                <p class="mt-3 text-center"><em>Added by <%= campground.author.username %></em></p>
                <p class="mt-3"><%= campground.desc %></p>
                <a class="btn btn-sm btn-success" href="/campgrounds/<%= campground._id %>/comment/new">
                    Add comment
                </a>
                <% if (currentUser && campground.author.id.equals(currentUser._id)) { %>
                    <form id="del-c" method="post" action="/campgrounds/<%= campground._id %>?_method=delete">
                        <input class="btn btn-sm btn-danger" type="submit" value="delete campground"> 
                    </form>
                <% } %>
            </div>
            <div class="container">
                <% campground.comments.forEach((comment) => { %>
                    <p><b><%= comment.author.username %></b> - <%= comment.comment %></p>
                <% }) %>
            </div>
        </div>
    </div>
    
  </body>
</html>